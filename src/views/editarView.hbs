{{> header}}

<main class="container position-relative">
    <div class="position-absolute">
        <a href="/lista">
            <i class="h1 text-black bi bi-chevron-left"></i>
        </a>
    </div>

    <div class="my-3">
        <h1 class="fw-bold m-0 text-center">Editar Funcionário</h1>
    </div>

    <div class="my-3 d-flex mx-auto p-0 justify-content-center align-items-center overflow-hidden"
        style="height: 14rem; width: 14rem; border-radius: 100%;">
        <img src="/pictures/{{foto}}.png" class="object-fit-cover h-100 w-100" alt="profile-pic">
    </div>

    <form action="/editar" method="post" class="row gap-4 gap-sm-0 justify-content-evenly"
        enctype="multipart/form-data">
        <input type="hidden" name="id" value="{{_id}}">
        <div class="col-sm-4 col-12 d-flex flex-column gap-4">
            <div>
                <label for="nome" class="form-label">Nome</label>
                <input name="nome" type="text" class="form-control" placeholder="João Andrade" value="{{nome}}">
            </div>
            <div>
                <label for="email" class="form-label">Email</label>
                <input name="email" type="email" class="form-control" placeholder="joao@example.com" value="{{email}}">
            </div>
            <div>
                <label for="telefone" class="form-label">Telefone</label>
                <input name="telefone" type="text" class="form-control" placeholder="(99) 99999-9999"
                    value="{{telefone}}">
            </div>
        </div>

        <div class="col-sm-4 col-12 d-flex flex-column gap-4">
            <div>
                <label for="cpf" class="form-label">CPF</label>
                <input name="cpf" type="text" class="form-control" placeholder="123.456.789-01" value="{{cpf}}">
            </div>
            <div>
                <label for="pis" class="form-label">PIS</label>
                <input name="pis" type="text" class="form-control" placeholder="123.45678.90-1" value="{{pis}}">
            </div>
            <div>
                <label for="rg" class="form-label">RG</label>
                <input name="rg" type="text" class="form-control" placeholder="12.345.678-9" value="{{rg}}">
            </div>
        </div>

        <div class="col-sm-4 col-12 d-flex flex-column gap-4">
            <div>
                <label for="foto" class="form-label">Foto</label>
                <input name="foto" type="file" class="form-control">
            </div>
        </div>

        <button type="submit" class="btn btn-primary w-50 mt-sm-5">Confirmar</button>
    </form>
</main>
