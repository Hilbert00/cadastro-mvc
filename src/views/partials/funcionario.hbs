<div class="col-sm-5 col mb-5 d-flex gap-2 rounded-2 border border-2 overflow-hidden">
    <div class="col-3 d-flex p-0 justify-content-center align-items-center overflow-hidden" style="height: 8rem">
        <img src="/pictures/{{foto}}.png" class="object-fit-cover h-100 w-100" alt="profile-pic">
    </div>
    <div class="col d-flex flex-column justify-content-evenly overflow-hidden">
        <a href="funcionario/{{_id}}" class="h2 m-0 text-decoration-none">{{nome}}</a>
        <div class="text-secondary d-flex align-items-center gap-2">
            <i class="bi bi-envelope"></i>
            <span>
                {{email}}
            </span>
        </div>
        <div class="text-secondary d-flex align-items-center gap-2">
            <i class="bi bi-telephone"></i>
            <span>
                {{telefone}}
            </span>
        </div>
    </div>
    <div class="col-1 d-flex flex-column justify-content-around">
        <form action="/deletar" method="post">
            <input type="hidden" name="id" value="{{_id}}">
            <button class="btn p-0 m-0 text-danger">
                <i class="bi bi-trash3-fill"></i>
            </button>
        </form>
        <a href="/editar/{{_id}}">
            <i class="bi bi-pencil-fill"></i>
        </a>
    </div>
</div>
