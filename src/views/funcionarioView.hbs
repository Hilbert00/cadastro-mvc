{{> header}}
<main class="container position-relative">
    <div class="position-absolute">
        <a href="/lista">
            <i class="h1 text-black bi bi-chevron-left"></i>
        </a>
    </div>

    <div class="my-3 d-flex mx-auto p-0 justify-content-center align-items-center overflow-hidden"
        style="height: 14rem; width: 14rem; border-radius: 100%;">
        <img src="/pictures/{{foto}}.png" class="object-fit-cover h-100 w-100" alt="profile-pic">
    </div>

    <h1 class="text-center">{{nome}}</h1>

    <div class="d-flex h4 mt-5 gap-4 flex-wrap justify-content-sm-evenly justify-content-between">
        <div class="d-flex align-items-center gap-4">
            <i class="bi bi-envelope"></i>
            <span class="">{{email}}</span>
        </div>

        <div class="d-flex align-items-center gap-4">
            <i class="bi bi-person"></i>
            <span class="">{{cpf}}</span>
        </div>

        <div class="d-flex align-items-center gap-4">
            <i class="bi bi-person-vcard"></i>
            <span class="">{{rg}}</span>
        </div>

        <div class="d-flex align-items-center gap-4">
            <i class="bi bi-telephone"></i>
            <span class="">{{telefone}}</span>
        </div>

        <div class="d-flex align-items-center gap-4">
            <i class="bi bi-briefcase"></i>
            <span class="">{{pis}}</span>
        </div>
    </div>
</main>
