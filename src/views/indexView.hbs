<header class="text-white bg-primary text-center py-1">
    <h1 class="display-3 fw-bold">Cadastro de Funcionários</h1>
</header>

{{#if msg}}
<div class="alert alert-{{msg.status}} rounded-0">
    {{msg.txt}}
</div>
{{/if}}

<main class="container text-center">
    <div class="row">
        <div class="col-sm col-12 d-flex flex-column border-end border-1 px-5 mb-sm-0 my-5"
            style="border-color: #CDCDCD;">
            <div class="row mb-3">
                <div class="col">
                    <h1 class="fw-bold">Login</h1>
                </div>
            </div>
            <div class="row flex-grow-1">
                <form action="/login" method="post" class="d-flex flex-column justify-content-between">
                    <div class="d-flex flex-column gap-5 mb-sm-0 mb-5">
                        <input type="text" name="nome" placeholder="Nome de Usuário" class="form-control" />
                        <input type="password" name="senha" placeholder="Senha" class="form-control" />
                    </div>
                    <button type="submit" class="btn btn-primary">Login</button>
                </form>
            </div>
        </div>
        <div class="col border-start border-1 px-5 mt-5" style="border-color: #CDCDCD;">
            <div class="row mb-3">
                <div class="col">
                    <h1 class="fw-bold">Cadastro</h1>
                </div>
            </div>
            <div class="row">
                <form action="/cadastro" method="post" class="d-flex flex-column gap-5">
                    <input type="text" name="nome" placeholder="Nome de Usuário" class="form-control" />
                    <input type="email" name="email" placeholder="Email" class="form-control" />
                    <input type="password" name="senha" placeholder="Senha" class="form-control" />
                    <button type="submit" class="btn btn-primary">Cadastre-se</button>
                </form>
            </div>
        </div>
    </div>
</main>
